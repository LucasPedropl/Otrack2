rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES AUXILIARES ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // Lista hardcoded de Super Admins para Bootstrap (Recuperação do Sistema)
    function isSuperAdmin() {
      return request.auth.token.email in ['pedrolucasmota2005@gmail.com', 'pedro@gmail.com', 'teste@gmail.com'];
    }

    // Verifica permissão no perfil com segurança para documentos inexistentes
    function hasPermission(requiredPermission) {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             exists(/databases/$(database)/documents/access_profiles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.profileId)) &&
             (
               'admin:full' in get(/databases/$(database)/documents/access_profiles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.profileId)).data.permissions || 
               requiredPermission in get(/databases/$(database)/documents/access_profiles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.profileId)).data.permissions
             );
    }

    // --- REGRAS POR COLEÇÃO ---

    match /users/{userId} {
      // Permite leitura pública (necessário para login via email/senha manual)
      allow read: if true; 
      allow create: if isAuthenticated() && (hasPermission('acesso_usuarios:create') || isSuperAdmin());
      allow update: if isAuthenticated() && (request.auth.uid == userId || hasPermission('acesso_usuarios:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('acesso_usuarios:delete') || isSuperAdmin());
    }

    match /access_profiles/{profileId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && (hasPermission('acesso_perfis:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('acesso_perfis:delete') || isSuperAdmin());
    }

    match /inventory/{itemId} {
      allow read: if isAuthenticated() && (hasPermission('orcamento_insumos:view') || isSuperAdmin());
      allow create, update: if isAuthenticated() && (hasPermission('orcamento_insumos:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('orcamento_insumos:delete') || isSuperAdmin());
    }

    match /measurement_units/{unitId} {
      allow read: if isAuthenticated() && (hasPermission('orcamento_unidades:view') || isSuperAdmin());
      allow create, update: if isAuthenticated() && (hasPermission('orcamento_unidades:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('orcamento_unidades:delete') || isSuperAdmin());
    }

    match /item_categories/{catId} {
      allow read: if isAuthenticated() && (hasPermission('orcamento_categorias:view') || isSuperAdmin());
      allow create, update: if isAuthenticated() && (hasPermission('orcamento_categorias:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('orcamento_categorias:delete') || isSuperAdmin());
    }

    match /colaboradores/{colaboradorId} {
      allow read: if isAuthenticated() && (hasPermission('mao_obra_colaboradores:view') || isSuperAdmin());
      allow create, update: if isAuthenticated() && (hasPermission('mao_obra_colaboradores:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('mao_obra_colaboradores:delete') || isSuperAdmin());
    }

    match /construction_sites/{siteId} {
      allow read: if isAuthenticated() && (hasPermission('obras:view') || isSuperAdmin());
      allow create, update: if isAuthenticated() && (hasPermission('obras:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('obras:delete') || isSuperAdmin());

      match /inventory/{siteItemId} {
        allow read: if isAuthenticated() && (hasPermission('obra_inventory:view') || isSuperAdmin());
        allow create, update: if isAuthenticated() && (hasPermission('obra_inventory:create') || isSuperAdmin());
        allow delete: if isAuthenticated() && (hasPermission('obra_inventory:delete') || isSuperAdmin());
        
        match /movements/{movId} {
           allow read: if isAuthenticated() && (hasPermission('obra_movements:view') || isSuperAdmin());
           allow create: if isAuthenticated() && (hasPermission('obra_inventory:create') || isSuperAdmin());
        }
      }
      
      match /tool_loans/{loanId} {
         allow read: if isAuthenticated() && (hasPermission('obra_tools:view') || isSuperAdmin());
         allow create, update: if isAuthenticated() && (hasPermission('obra_tools:create') || isSuperAdmin());
         allow delete: if isAuthenticated() && (hasPermission('obra_tools:delete') || isSuperAdmin());
      }
      
      match /rented_equipment/{equipId} {
         allow read: if isAuthenticated() && (hasPermission('obra_rented:view') || isSuperAdmin());
         allow create, update: if isAuthenticated() && (hasPermission('obra_rented:create') || isSuperAdmin());
         allow delete: if isAuthenticated() && (hasPermission('obra_rented:delete') || isSuperAdmin());
      }

      match /epi_withdrawals/{withdrawalId} {
         allow read: if isAuthenticated() && (hasPermission('obra_epi:view') || isSuperAdmin());
         allow create, update: if isAuthenticated() && (hasPermission('obra_epi:create') || isSuperAdmin());
         allow delete: if isAuthenticated() && (hasPermission('obra_epi:delete') || isSuperAdmin());
      }
    }
  }
}
