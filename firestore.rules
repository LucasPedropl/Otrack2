
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNÇÕES AUXILIARES ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // Lista hardcoded de Super Admins para Bootstrap (Recuperação do Sistema)
    function isSuperAdmin() {
      return request.auth.token.email in ['pedrolucasmota2005@gmail.com', 'pedro@gmail.com', 'teste@gmail.com'];
    }

    // Verifica permissão no perfil com segurança para documentos inexistentes
    function hasPermission(requiredPermission) {
      // Se o usuário não existe no banco, retorna false (a menos que seja super admin tratado na regra de match)
      // O exists previne o erro de acessar .data em nulo
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             // Verifica se o perfil existe
             exists(/databases/$(database)/documents/access_profiles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.profileId)) &&
             // Verifica a permissão dentro do perfil
             (
               'admin:full' in get(/databases/$(database)/documents/access_profiles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.profileId)).data.permissions || 
               requiredPermission in get(/databases/$(database)/documents/access_profiles/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.profileId)).data.permissions
             );
    }

    // --- REGRAS POR COLEÇÃO ---

    match /users/{userId} {
      allow read: if true; 
      // Permite escrita se tiver permissão OU se for um Super Admin tentando salvar a si mesmo (Bootstrap)
      allow write: if isAuthenticated() && (
        hasPermission('acesso_usuarios:create') || 
        (isSuperAdmin() && request.auth.uid == userId)
      );
      allow update: if isAuthenticated() && (request.auth.uid == userId || hasPermission('acesso_usuarios:create') || isSuperAdmin()); 
    }

    match /access_profiles/{profileId} {
      allow read: if true; 
      allow write: if isAuthenticated() && (hasPermission('acesso_perfis:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('acesso_perfis:delete') || isSuperAdmin());
    }

    match /inventory/{itemId} {
      allow read: if true; 
      allow create, update: if isAuthenticated() && (hasPermission('orcamento_insumos:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('orcamento_insumos:delete') || isSuperAdmin());
    }

    match /measurement_units/{unitId} {
      allow read: if true;
      allow write: if isAuthenticated() && (hasPermission('orcamento_unidades:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('orcamento_unidades:delete') || isSuperAdmin());
    }

    match /item_categories/{catId} {
      allow read: if true;
      allow write: if isAuthenticated() && (hasPermission('orcamento_categorias:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('orcamento_categorias:delete') || isSuperAdmin());
    }

    match /construction_sites/{siteId} {
      allow read: if true; 
      allow create, update: if isAuthenticated() && (hasPermission('obras:create') || isSuperAdmin());
      allow delete: if isAuthenticated() && (hasPermission('obras:delete') || isSuperAdmin());

      match /inventory/{siteItemId} {
        allow read: if true;
        allow write: if isAuthenticated() && (hasPermission('obras:create') || isSuperAdmin());
        
        match /movements/{movId} {
           allow read: if true;
           allow create: if true; 
        }
      }
      
      // Novas Coleções
      match /tool_loans/{loanId} {
         allow read: if true;
         allow write: if true; // Controlado pelo app por enquanto
      }
      
      match /rented_equipment/{equipId} {
         allow read: if true;
         allow write: if true;
      }
    }

    match /colaboradores/{colaboradorId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
